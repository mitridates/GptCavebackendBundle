{#
/**
 * Edit Fielddefinitionlang
 * @file modal_form.html.twig
 * @param array arrayParams
 * @param FormView form
 * @param string language ISO 2
 * @param string displayLanguage Localized display name for language
 * @param Fielddefinitionlang entity
 * @param Fielddefinition fielddefinition
 * @param bool translationExist If is new translation
 */
#}
{% set panelType =  translationExist ? '@GptCavebackend/partial/card/card-edit.html.twig': '@GptCavebackend/partial/card/card-new.html.twig' %}
{% set paneltitle =  translationExist ? 'fielddefinition.modal.edit.translation' : 'fielddefinition.modal.new.translation' %}
{% include '@GptCavebackend/partial/form/error/all_errors_message.html.twig'%}

{% form_theme form '@GptCavebackend/symfony/fields.html.twig' %}
{{ form_start(form) }}

{% embed panelType %}
    {% block heading %}{{ paneltitle|trans({},'cavepages')|raw }} - {{ displayLanguage|upper }}{% endblock heading %}
    {% block body %}

        <div class="row">
            <div class="col">
                <table class="table">
                    <tr>
                        <td>{{ form_label(form.name)}}</td>
                        <td>{{ form_label(form.abbreviation)}}</td>
                        <td>{{ form_label(form.review)}}</td>
                    </tr>
                    <tr>
                        <td>{{ form_widget(form.name)}}</td>
                        <td>{{ form_widget(form.abbreviation)}}</td>
                        <td>{{ form_widget(form.review)}}</td>
                    </tr>
                </table>
            </div>
        </div>


        {%- set attr = { 'attr': {'style': 'height: 150px'} } -%}

        <div class="row">
            <div class="col-lg-3 col-sm-12 pr-0">
                <table class="table">
                    <tr>
                        <td>{{ form_label(form.definition)}}</td>
                    </tr>
                    <tr>
                        <td>{{ form_widget(form.definition, attr)}}</td>
                    </tr>
                </table>
            </div>

            <div class="col-lg-3 col-sm-12 p-0">
                <table class="table">
                    <tr>
                        <td>{{ form_label(form.example)}}</td>
                    </tr>
                    <tr>
                        <td>{{ form_widget(form.example, attr)}}</td>
                    </tr>
                </table>
            </div>

            <div class="col-lg-3 col-sm-12 p-0">
                <table class="table">
                    <tr>
                        <td>{{ form_label(form.comment)}}</td>
                    </tr>
                    <tr>
                        <td>{{ form_widget(form.comment, attr)}}</td>
                    </tr>
                </table>
            </div>

            <div class="col-lg-3 col-sm-12 pl-0">
                <table class="table">
                    <tr>
                        <td>{{ form_label(form.uso)}}</td>
                    </tr>
                    <tr>
                        <td>{{ form_widget(form.uso, attr)}}</td>
                    </tr>
                </table>
            </div>
        </div>

    {% endblock body %}
{% endembed %}
{{ form_end(form) }}