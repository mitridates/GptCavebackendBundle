{% embed '@GptCavebackend/partial/card/card-'~type|default('edit')~'.html.twig' %}
    {% block heading %}{{ 'article.edit.form.physical'| trans({},'cavepages')|raw -}}{% endblock heading %}
    {% block body %}
        <div class="row">
            <div class="col-lg-6 col-sm-12">
                <table class="table">
                    <tr>
                        <td>{{ form_label(form.pagerange)}}</td>
                        <td>{{ form_label(form.quantityofmaps)}}</td>
                    </tr>
                    <tr>
                        <td>{{ form_widget(form.pagerange)}}</td>
                        <td>{{ form_widget(form.quantityofmaps)}}</td>
                    </tr>
                </table>
            </div>
            <div class="col-lg-6 col-sm-12">
                <table class="table">
                    <tr>
                        <td>{{ form_label(form.quantityofplates)}}</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>{{ form_widget(form.quantityofplates)}}</td>
                        <td>{{ form_widget(form.bibliographypresent)}}</td>
                    </tr>
                </table>
            </div>
        </div>
    {% endblock body %}
{% endembed %}