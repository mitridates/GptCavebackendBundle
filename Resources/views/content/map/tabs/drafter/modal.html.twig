{% set isId= (form.drafterid.vars.value is empty)? false : true %}
{% embed '@GptCavebackend/partial/page/panel.html.twig' with {type: arrayParams.page.style.form_panel}%}
{% block heading %}{{ ('map.form.'~name~'.tab')|trans({},'cavepages')|raw -}}{% endblock heading %}
{% block body %}
<table class="table table-bordered" id="drafterTable">
    <tr>
        <td class="col-lg-3 text-center">
          <input type="radio" name="draftermodal" id="mod-op-drafterid" {% if isId  %}checked="checked"{% endif %} onchange="toggleDrafter(this)">{{ form_label(form.drafterid)}}
          <input type="radio" name="draftermodal" id="mod-op-drafter" {% if not isId%}checked="checked"{% endif %} onchange="toggleDrafter(this)"> {{ form_label(form.drafter)}}
        </td>
        <td class="draftermodal_td" {% if isId %}style="display: none;"{% endif %}>{{ form_widget(form.drafter)}}</td>
        <td class="draftermodal_td" {% if not isId %}style="display: none;"{% endif %}>{{ form_widget(form.drafterid)}}</td>
    </tr>
</table>
<table class="table table-bordered">
<tr>
    <td class="col-lg-2">{{ form_label(form.position)}}</td>
    <td><div class="col-lg-1 nopadding">{{ form_widget(form.position)}}</td>
</tr>
</table>
{% endblock body %}
{% endembed %}