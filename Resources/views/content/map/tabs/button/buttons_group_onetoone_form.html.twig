{#
/**
 * @file buttons_group_onetoone_form.html.twig
 *  Botonera para formularios de entidades onetoone o Map
 * @parent ../tabs/{name}.html.twig
 */
#}
{%set btns = 
    {
        'clear': {'attr': { 'onclick': 'Grot(\'#'~form.vars.attr.id~'\').form(\'clear\');' } },
        'reset': {'type': 'reset'},
        'reload': {'type': 'button','attr': { 'onclick': 'tabLoader.load(\'#'~name~'-tab\', true);' } },
        'save': {'type': 'submit', 'txt': 'save', 'attr': { 'onclick': clickEvent }, 'icon': {'class': 'submit submit-'~name} }
    } 
%}
    {%if name != 'map' %}
        {%set btns =  {'delete': {'txt': 'delete.this.form', 'attr': { 'onclick': deleteEvent  }, 'icon': {'class': 'delete delete-'~name} }}|merge(btns)%}
    {%endif%}

{% embed '@GptCavebackend/partial/page/botonera.html.twig' with {'class': 'col-lg-12 text-right nomargin nopadding' } %}
    {% block derecha %}
    {%include '@GptCavebackend/partial/form/buttons.html.twig'  with {'btns': btns} only %}
    {% endblock derecha%}
{% endembed %}