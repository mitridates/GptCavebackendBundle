                </table>
            </div>

            <div class="col-lg-4 col-sm-12">
                <table class="table">
                    <tr>
                        <td>{{ form_label(form.grefmethod)}}</td>
                        <td>{{ form_widget(form.grefmethod)}}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.grefdate)}}</td>
                        <td>{{ form_widget(form.grefdate)}}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.mapgrid)}}</td>
                        <td>{{ form_widget(form.mapgrid)}}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.gridrefunits)}}</td>
                        <td>{{ form_widget(form.gridrefunits)}}</td>
                    </tr>
                </table>
            </div>

            <div class="col-lg-4 col-sm-12">
                <table class="table">
                    <tr>
                        <td>{{ form_label(form.grefprecision)}}</td>
                        <td>{{ form_widget(form.grefprecision)}}</td>
                    </tr>
                    <tr>
