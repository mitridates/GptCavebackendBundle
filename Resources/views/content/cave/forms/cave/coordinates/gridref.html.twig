                        <td>{{ form_widget(form.grefaccuracy)}}</td>
                    </tr>

                </table>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <table class="table">
                    <tr>
                        <td>{{ form_label(form.grefcomment)}}</td>
                    </tr>
                    <tr>
                        <td>{{ form_widget(form.grefcomment)}}</td>
                    </tr>
                </table>
            </div>
        </div>

{% endblock body %}
{% endembed %}