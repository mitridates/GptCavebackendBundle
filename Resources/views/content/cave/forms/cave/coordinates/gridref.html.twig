                    <tr>
                        <td>{{ form_label(form.northing)}}</td>
                        <td>{{ form_widget(form.northing)}}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.gridzone)}}</td>
                        <td>{{ form_widget(form.gridzone)}}</td>
                    </tr>
                    <tr>
